<div class="row">
  <div class="col-sm-8 col-sm-offset-2">                  
    <img src="/public/assets/img/burger_image.jpg" class="img-responsive" alt="Bob's Burgers">
  </div>
</div>   

<div class="row">
  <div class="col-sm-4 col-sm-offset-1">
    <hr>
    <div id="burger-area">
      <ul>
        {{#each burger}}
          {{#unless devoured}}
            {{> burger/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>      
    </div>
  </div>

  <div class="col-sm-4 col-sm-offset-1">
    <hr>
    <div id="burger-devoured-area">
      <ul>
        {{#each burger}}
          {{#if devoured}}
            {{> burger/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>      
    </div>
  </div>   
</div>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>Add a Burger</h2>
     
    <form class="create-form">
      <div class="form-group">
        <input type="text" id="burger" name="burger_name">
      </div>
      
      <br>
      
      <button type="submit" id="burger-submit" class="btn btn-md pull-right">Submit</button>

    </form>
  </div>
</div>

